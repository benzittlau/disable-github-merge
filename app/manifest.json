{
    "name": "Disable GitHub Merge",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "Disables the GitHub merge button for user configurable target branches",
    "icons": {
        "128": "images/icon-128.png"
    },
    "permissions": [
      "storage"
    ],
    "options_ui": {
        "page": "options_ui.html",
        "chrome_style": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*/*/pull/*"
            ],
            "js": [
                "lib/jquery.min.js",
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ]
}
